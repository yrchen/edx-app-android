<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.openedu.android"
    android:installLocation="auto" >

    <!-- Required by app for server communication and video download -->
    <!-- Required by Segment -->
    <!-- Required by NewRelic -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Required by NewRelic -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Required by app for preventing screen lock while playing a video -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Required by app for performing downloads without showing download notification -->
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />

    <!-- Required by app for storing downloaded videos to the external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Required by legacy Google Sign In (TODO: Switch to new Google Sign In) -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- Required by app for TelephonyManager to determine mobile network carrier ID -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Sticky broadcast passing a message from one screen and display on another -->
    <uses-permission android:name="android.permission.BROADCAST_STICKY"/>

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <permission android:protectionLevel="signature"
        android:name="tw.openedu.android.permission.C2D_MESSAGE" />
    <uses-permission android:name="tw.openedu.android.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:supportsRtl="${supportsRtl}"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="tw.openedu.android.base.RuntimeApplication" >

        <activity
            android:name="tw.openedu.android.view.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="tw.openedu.android.view.LaunchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="tw.openedu.android.view.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing"
            android:configChanges="keyboardHidden|orientation"
            >
        </activity>

        <activity
            android:name="tw.openedu.android.view.MyCoursesListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="tw.openedu.android.view.CourseDashboardActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name="tw.openedu.android.view.CourseOutlineActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity
            android:name="tw.openedu.android.view.CourseDiscussionTopicsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" />

        <activity
            android:name="tw.openedu.android.view.CourseDiscussionPostsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/discussion_title" />

        <activity
            android:name="tw.openedu.android.view.CourseDiscussionCommentsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" />

        <activity
            android:name="tw.openedu.android.view.CourseDiscussionResponsesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" />

        <activity
            android:name="tw.openedu.android.view.DiscussionAddPostActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/discussion_post_create_new_post" />

        <activity
            android:name="tw.openedu.android.view.DiscussionAddResponseActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/discussion_add_response_title" />

        <activity
            android:name="tw.openedu.android.view.DiscussionAddCommentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/discussion_add_comment_title" />

        <activity
            android:name="tw.openedu.android.view.CourseUnitNavigationActivity"
            android:label="@string/app_name"
            android:screenOrientation="user"
            android:configChanges="orientation|keyboardHidden|screenSize"
            >
        </activity>

        <activity
            android:name="tw.openedu.android.view.CourseLectureListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity
            android:name="tw.openedu.android.view.my_videos.MyVideosActivity"
            android:label="@string/label_my_videos"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity
            android:name="tw.openedu.android.view.DownloadListActivity"
            android:label="@string/title_download"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity
            android:name="tw.openedu.android.view.WebViewFindCoursesActivity"
            android:label="@string/find_courses_title"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="tw.openedu.android.view.NativeFindCoursesActivity"
            android:label="@string/find_courses_title"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="tw.openedu.android.view.CourseInfoActivity"
            android:label="@string/find_courses_title"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="tw.openedu.android.view.CourseDetailActivity"
            android:label="@string/find_courses_title"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="tw.openedu.android.view.VideoListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name="tw.openedu.android.view.CourseHandoutActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name="tw.openedu.android.view.CourseAnnouncementsActivity"
            android:label="@string/announcement_title"
            android:screenOrientation="portrait" />

        <activity
            android:name="tw.openedu.android.view.CertificateActivity"
            android:label="@string/tab_label_certificate"
            android:screenOrientation="portrait" />
        <activity
            android:name="tw.openedu.android.view.SettingsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name="tw.openedu.android.view.RegisterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="tw.openedu.android.profiles.UserProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoShadow"
            android:label=""/>

        <activity android:name="tw.openedu.android.view.EditUserProfileActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="tw.openedu.android.view.FormFieldActivity"
            android:screenOrientation="portrait"
            android:label=""
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name="tw.openedu.android.view.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:label=""/>

        <activity android:name="tw.openedu.android.view.dialog.WebViewDialogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:label=""/>

        <receiver android:name="tw.openedu.android.module.download.DownloadCompleteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>

        <!-- Setup for Code Coverage -->
        <instrumentation
            android:name="tw.openedu.android.instrumentation.EdxInstrumentation"
            android:targetPackage="tw.openedu.android" >
        </instrumentation>

        <!-- adb shell am broadcast -a tw.openedu.android.END_EMMA -->
        <receiver android:name="tw.openedu.android.instrumentation.EndEmmaBroadcast" >
            <intent-filter>
                <action android:name="tw.openedu.android.END_EMMA" />
            </intent-filter>
        </receiver>

        <!-- Setup Google -->
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Setup Facebook -->
        <activity android:name="com.facebook.LoginActivity" />

        <service android:name="tw.openedu.android.services.DownloadSpeedService" />

        <!--  Parse Setup -->
        <!--  https://www.parse.com/apps/quickstart#parse_push/android/existing  -->
        <service android:name="com.parse.PushService" />
        <!-- we have to add a level of indirection to avoid crash as parse maybe disabled by setting -->
        <receiver android:name="com.parse.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="tw.openedu.android" />
            </intent-filter>
        </receiver>

        <!-- Fabric -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="4519c1936f721d85502c205816f8e041c845229b"
            />
    </application>

</manifest>
